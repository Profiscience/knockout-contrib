{
	"private": true,
	"scripts": {
		"build": "taskr meta && lerna exec -- taskr build:\\$LERNA_PACKAGE_NAME -d ../.. && taskr stats",
		"test": "cd packages/router && yarn test && cd ../.. && jest"
	},
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"@taskr/clear": "^1.1.0",
		"@taskr/uglify": "^1.1.0",
		"@types/chalk": "^2.2.0",
		"@types/jest": "^21.1.5",
		"@types/jsdom": "^11.0.3",
		"@types/knockout": "^3.4.0",
		"@types/lodash": "^4.14.80",
		"@types/node": "^8.0.47",
		"chalk": "^2.3.0",
		"execa": "^0.8.0",
		"jest": "^21.2.1",
		"jquery": "^3.2.1",
		"jsx-dom": "^5.2.0",
		"knockout": "3.4.0",
		"knockout-punches": "^0.5.1",
		"lerna": "^2.4.0",
		"lodash": "^4.17.4",
		"rollup": "^0.50.0",
		"rollup-plugin-commonjs": "^8.2.5",
		"rollup-plugin-node-resolve": "^3.0.0",
		"taskr": "^1.1.0",
		"taskr-rename": "^0.0.1",
		"taskr-rollup": "^0.0.3",
		"ts-jest": "^21.1.4",
		"typescript": "^2.5.3"
	},
	"jest": {
		"collectCoverage": true,
		"coverageReporters": [
			"lcov",
			"html"
		],
		"moduleFileExtensions": [
			"js",
			"ts",
			"tsx"
		],
		"testRegex": "(__tests__/[^_].*|test)\\.tsx?$",
		"testURL": "http://localhost",
		"transform": {
			"^.+\\.[tj]sx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
		}
	}
}
