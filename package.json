{
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "build:examples": "taskr build:examples",
    "lint": "tslint --project tsconfig.json",
    "prepush": "yarn lint",
    "prepublishOnly": "yarn build",
    "serve:examples": "taskr serve:examples",
    "test:router": "cd packages/router && yarn test",
    "test": "jest",
    "generate": "plop"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@taskr/clear": "^1.1.0",
    "@taskr/postcss": "^1.1.2",
    "@types/jest": "^22.0.0",
    "@types/jsdom": "^11.0.3",
    "@types/knockout": "^3.4.0",
    "@types/lodash": "^4.14.80",
    "@types/node": "^9.3.0",
    "are-we-there-yet": "^1.1.4",
    "body-parser": "^1.18.2",
    "execa": "^0.9.0",
    "gauge": "^2.7.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.0.1",
    "jest-jquery-matchers": "^2.0.0",
    "jquery": "^3.2.1",
    "jsx-dom": "^5.2.0",
    "knockout": "^3.5.0-beta",
    "knockout-punches": "^0.5.1",
    "lerna": "^2.4.0",
    "lodash": "^4.17.4",
    "on-finished": "^2.3.0",
    "postcss": "^6.0.14",
    "postcss-cssnext": "^3.0.2",
    "taskr": "^1.1.0",
    "ts-jest": "^22.0.0",
    "ts-loader": "^3.2.0",
    "ts-node": "^5.0.0",
    "typed-css-modules": "^0.3.1",
    "typescript": "^2.7.0-rc"
  },
  "optionalDependencies": {
    "@taskr/watch": "^1.1.0",
    "eslint": "^4.14.0",
    "eslint-config-profiscience": "^2.0.4",
    "express": "^4.16.2",
    "globby": "^8.0.0",
    "happypack": "^4.0.0",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "plop": "^1.9.0",
    "toprogress": "^0.1.3",
    "tslint": "^5.8.0",
    "webpack": "^4.0.0",
    "webpack-dev-middleware": "^2.0.3"
    "typescript": "^2.8.0-rc"
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/dist/",
      "/node_modules/"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "mapCoverage": true,
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "moduleNameMapper": {
      "\\.css$": "identity-obj-proxy"
    },
    "testRegex": "packages/[^/]+/(__tests__/[^_]*|[^_]*test)\\.tsx?$",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.[tj]sx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!@profiscience)"
    ]
  }
}
