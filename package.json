{
	"private": true,
	"scripts": {
		"build": "taskr meta && lerna run build",
		"build:examples": "taskr build:examples",
		"lint": "tslint --project tsconfig.json",
		"prepush": "yarn lint",
		"prepublishOnly": "yarn build",
		"serve:examples": "taskr serve:examples",
		"test:router": "cd packages/router && yarn test",
		"test": "jest",
		"generate": "plop"
	},
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"@taskr/clear": "^1.1.0",
		"@taskr/postcss": "^1.1.2",
		"@taskr/watch": "^1.1.0",
		"@types/jest": "^22.0.0",
		"@types/jsdom": "^11.0.3",
		"@types/knockout": "^3.4.0",
		"@types/lodash": "^4.14.80",
		"@types/node": "^9.3.0",
		"caniuse-lite": "^1.0.30000784",
		"eslint": "^4.14.0",
		"eslint-config-profiscience": "^2.0.4",
		"execa": "^0.9.0",
		"express": "^4.16.2",
		"globby": "^7.1.1",
		"happypack": "^4.0.0",
		"html-loader": "^0.5.1",
		"html-webpack-plugin": "^2.30.1",
		"husky": "^0.14.3",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^22.0.1",
		"jest-jquery-matchers": "^2.0.0",
		"jquery": "^3.2.1",
		"jsx-dom": "^5.2.0",
		"knockout": "^3.4.0",
		"knockout-punches": "^0.5.1",
		"lerna": "^2.4.0",
		"lodash": "^4.17.4",
		"plop": "^1.9.0",
		"postcss": "^6.0.14",
		"postcss-cssnext": "^3.0.2",
		"postcss-modules": "^1.1.0",
		"rollup": "^0.55.1",
		"rollup-plugin-commonjs": "^8.2.6",
		"rollup-plugin-node-resolve": "^3.0.0",
		"rollup-plugin-postcss": "^1.0.0",
		"taskr": "^1.1.0",
		"taskr-rollup": "^0.0.4",
		"toprogress": "^0.1.3",
		"ts-jest": "^22.0.0",
		"ts-loader": "^3.2.0",
		"tslint": "^5.8.0",
		"typed-css-modules": "^0.3.1",
		"typescript": "^2.7.0-rc",
		"webpack": "^3.10.0",
		"webpack-dev-middleware": "^2.0.3"
	},
	"jest": {
		"collectCoverage": true,
		"coveragePathIgnorePatterns": [
			"/dist/",
			"/node_modules/"
		],
		"coverageReporters": [
			"lcov",
			"html"
		],
		"moduleFileExtensions": [
			"js",
			"ts",
			"tsx"
		],
		"moduleNameMapper": {
			"\\.css$": "identity-obj-proxy"
		},
		"testRegex": "packages/[^/]+/(__tests__/[^_]*|[^_]*test)\\.tsx?$",
		"testURL": "http://localhost",
		"transform": {
			"^.+\\.[tj]sx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
		}
	}
}
