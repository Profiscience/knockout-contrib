{
	"scripts": {
		"meta": "taskr meta",
		"install": "taskr meta && lerna bootstrap --hoist --npm-client=yarn",
		"build": "lerna exec -- taskr build:\\$LERNA_PACKAGE_NAME -d ../.. && taskr stats",
		"test": "jest"
	},
	"devDependencies": {
		"@taskr/clear": "^1.1.0",
		"@taskr/uglify": "^1.1.0",
		"@types/chalk": "^2.2.0",
		"@types/jest": "^21.1.5",
		"@types/knockout": "^3.4.0",
		"@types/lodash": "^4.14.80",
		"@types/node": "^8.0.47",
		"chalk": "^2.3.0",
		"execa": "^0.8.0",
		"jest": "^21.2.1",
		"lerna": "^2.4.0",
		"lodash": "^4.17.4",
		"rollup-plugin-commonjs": "^8.2.5",
		"rollup-plugin-node-resolve": "^3.0.0",
		"taskr": "^1.1.0",
		"taskr-rename": "^0.0.1",
		"taskr-rollup": "^0.0.3",
		"ts-jest": "^21.1.4",
		"typescript": "^2.5.3"
	},
	"jest": {
		"collectCoverage": true,
		"coverageReporters": [
			"lcov",
			"html"
		],
		"moduleFileExtensions": [
			"js",
			"ts"
		],
		"testRegex": "(__tests__/[^_].*|test)\\.ts$",
		"transform": {
			"^.+\\.[tj]s$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
		}
	}
}
