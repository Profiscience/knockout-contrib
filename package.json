{
  "private": true,
  "scripts": {
    "build": "ts-node ./build.ts",
    "ci": "yarn lint && yarn build && yarn test && yarn test:router",
    "format": "pretty-quick",
    "lint": "tslint -p ./tsconfig.json",
    "release": "yarn ci && lerna publish --conventional-commits",
    "link:all": "lerna exec -- \"yarn link && cd $REPO && yarn link \\$LERNA_PACKAGE_NAME\"",
    "test": "jest",
    "test:router": "lerna run --scope @profiscience/knockout-contrib-router test"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@types/babel-core": "^6.25.6",
    "@types/benchmark": "^1.0.31",
    "@types/chokidar": "^2.1.3",
    "@types/fs-extra": "^8.0.0",
    "@types/jest": "^24.0.13",
    "@types/jquery": "^3.3.29",
    "@types/jsdom": "^12.2.3",
    "@types/lodash": "^4.14.133",
    "@types/node": "^12.0.5",
    "babel-core": "^6.26.3",
    "babel-jest": "^24.8.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "benchmark": "^2.1.4",
    "chalk": "^2.4.2",
    "chokidar": "^3.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "fs-extra": "^8.0.1",
    "globby": "^9.2.0",
    "husky": "^2.4.0",
    "jest": "^24.8.0",
    "jest-jquery-matchers": "^2.0.0",
    "jquery": "^3.4.1",
    "jsx-dom": "^6.3.1",
    "knockout": "^3.5.0",
    "knockout-punches": "^0.5.1",
    "lerna": "^3.14.1",
    "lodash": "^4.17.11",
    "microtime": "^3.0.0",
    "prettier": "^1.17.1",
    "pretty-quick": "^1.11.0",
    "toprogress": "^0.1.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.2.0",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.1"
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/dist/",
      "/node_modules/",
      "/router/__tests__/"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "testRegex": "packages/[^/]+/(__tests__/[^_]*|[^_]*test)\\.tsx?$",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "isolatedModules": true,
        "diagnostics": false
      }
    }
  },
  "prettier": {
    "arrowParens": "always",
    "semi": false,
    "singleQuote": true
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn format --staged"
    }
  }
}
