{
  "compilerOptions": {
    "importHelpers": true,
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "dist",
    "jsx": "react",
    "jsxFactory": "h",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es5",
      "es2015",
      "esnext.asynciterable"
    ],
    "types": [
      "knockout",
      "marked"
    ]
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "dist",
    "examples",
    "test.tsx"
  ]
}