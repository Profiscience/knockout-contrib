{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "importHelpers": true,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es5",
      "es2015.core",
      "es2015.symbol",
      "es2015.promise",
      "es2015.reflect"
    ]
  }
}