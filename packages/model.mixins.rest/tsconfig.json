{
  "compilerOptions": {
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "lib": [
      "dom",
      "es5",
      "es2015.core",
      "es2015.symbol",
      "es2015.collection",
      "es2015.promise",
      "es2015.reflect",
      "esnext.asynciterable"
    ]
  },
  "exclude": [
    "dist",
    "test.ts"
  ]
}