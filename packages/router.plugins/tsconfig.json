{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "./",
    "jsx": "react",
    "jsxFactory": "h",
